<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/main_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/unknown_default" />
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/profile_picture"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/last_name"
                    android:layout_toRightOf="@+id/profile_picture" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NUME UTILIZATOR: "
                    android:textColor="@color/black" />
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADRESA DE EMAIL: "
                    android:textColor="@color/black"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TELEFON: "
                    android:textColor="@color/black"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATA NAȘTERII: "
                    android:textColor="@color/black"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:textSize="25sp"
                    android:id="@+id/birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/projects_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="40sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROIECTE"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/profile_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="40sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIZUALIZĂRI PROFIL"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"

                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/total_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="40sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL POSTĂRI"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/signup_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="40sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATA ÎNSCRIERII"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="40sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIETENI ÎN REȚEA"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:id="@+id/daily_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="40sp"
                    />
                <com.cypien.leroy.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POSTĂRI PE ZI"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginBottom="10dp"/>
        <com.cypien.leroy.utils.CustomButton
            android:id="@+id/modify_profile"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_button"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="MODIFICĂ PROFIL" />

    </LinearLayout>
</ScrollView>
