<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">
        <ImageView
            android:id="@+id/see_catalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/see_catalog"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/see_stores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/see_stores"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/see_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/servicii_button"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/vocea_clientului"
            android:adjustViewBounds="true"/>
    </LinearLayout>
</ScrollView>